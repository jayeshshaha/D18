    }
}

Services
----------------------------------------------------
using System;
using System.Collections.Generic;
using System.Linq;
using System.Threading.Tasks;
using dotnetapp.Models;

namespace dotnetapp.Services
{
    public interface IBookService
    {
        List<Book> GetBooks();
        Book GetBook(int id);
        Book SaveBook(Book book);
        Book UpdateBook(int id,Book book);
        bool DeleteBook(int id);
    }
}

using System;
using System.Collections.Generic;
using System.Linq;
using System.Threading.Tasks;
using dotnetapp.Models;
using dotnetapp.Repository;

namespace dotnetapp.Services
{
    public class BookService : IBookService
    {
        BookRepository br = new BookRepository();
        public List<Book> GetBooks(){
            return br.GetAll();
        }
        public Book GetBook(int id){
             return br.GetBook(id);
        }
        public Book SaveBook(Book book){
            return br.SaveBook(book);
        }
        public Book UpdateBook(int id,Book book){
            return br.UpdateBook(id,book);
        }
        public bool DeleteBook(int id){
        
        }
    }
}

Controllers
----------------------------------------------------

using System;
using System.Collections.Generic;
using System.Linq;
using System.Threading.Tasks;
using dotnetapp.Models;
using dotnetapp.Services;
using Microsoft.AspNetCore.Mvc;

namespace dotnetapp.Controllers
{
    [ApiController]
    [Route("api/[controller]")]
    public class BookController : ControllerBase
    {
        IBookService service;
        public BookController(IBookService sr)
        {
            service = sr;
        }

        [HttpGet]
        public IActionResult GetAll(){
            List<Book> bookList = service.GetBooks();
            return Ok(bookList);
        }

        [HttpGet("{id}")]
        public IActionResult GetBook(int id){
            List<Book> book = service.GetBook(id);
            if(book != null){
            return Ok(book);
            }else{
                return NotFound();
            }
        }

        [HttpPost]
        public IActionResult AddBook(Book newBook){
           Book SavedBook = service.SaveBook(newBook);
           if(SavedBook != null){
               return Ok();
           } 
           return NotFound();
        }

        [HttpPut("{Id}")]
        public IActionResult ModifyBook(int Id,Book newBook){
               Book savedBook = service.UpdateBook(newBook);
               if(savedBook != null){
                return Ok();
               }
               return NotFound();

        }
    [HttpDelete("{Id}")]
       public IActionResult DeleteBook(int Id){
            bool status = service.DeleteBook(Id);
            if(status){
                return Ok();
            }else{
                return NotFound();
            }
       }
    }
}
